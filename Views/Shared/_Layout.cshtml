    <script>
        $(document).ready(function () {
            fetchLatestAssignments();
        });

        function fetchLatestAssignments() {
            $.ajax({
                url: "/ClassRooms/GetLatestAssignments",
                type: "GET",
                success: function (response) {
                    console.log("✅ API Response:", response); // Debug toàn bộ response
                    let notificationList = $("#notificationList");
                    let notificationCount = $("#notificationCount");

                    // Xóa thông báo cũ, giữ lại tiêu đề
                    notificationList.find("li:not(:first)").remove();

                    if (response.success && response.assignments.length > 0) {
                        notificationCount.text(response.assignments.length);

                        response.assignments.forEach(item => {
                            console.log("🎯 Assignment Data:", item); // Debug từng bài tập

                            let className = item.className && item.className !== "Unknown Class" ? item.className : "Không có lớp";
                            let classImage = item.classImage && item.classImage !== "/files/assets/images/default-class.png" ? item.classImage : "/files/assets/images/default-class.png";
                            let assignmentTitle = item.assignmentTitle && item.assignmentTitle !== "No Title" ? item.assignmentTitle : "Không có tiêu đề";
                            let dueDate = item.dueDate && item.dueDate !== "No Due Date" ? item.dueDate : "Không có hạn nộp";

                            let notificationItem = `
                    <li>
                        <div class="media">
                            <img class="d-flex align-self-center img-radius"
                                src="${classImage}" alt="Class Image" width="50" height="50"/>
                            <div class="media-body">
                                <h5 class="notification-user">${className}</h5>
                                <p class="notification-msg">
                                    <strong>${assignmentTitle}</strong> - Due: ${dueDate}
                                </p>
                            </div>
                        </div>
                    </li>
                    `;
                            notificationList.append(notificationItem);
                        });
                    } else {
                        notificationList.append('<li><p class="text-center">Không có bài tập mới</p></li>');
                        notificationCount.text("0");
                    }
                },
                error: function () {
                    console.error("❌ Lỗi khi lấy danh sách bài tập.");
                }
            });
        }
    </script>

