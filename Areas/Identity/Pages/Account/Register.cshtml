@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="container-fluid">
    <div class="row justify-content-center align-items-center" style="min-height: 80vh;">
        <div class="col-md-5">
            <div class="auth-box card"
                style="box-shadow: 0 10px 20px rgba(0,0,0,0.19), 0 6px 6px rgba(0,0,0,0.23); border-radius: 8px; border: none;">
                <div class="card-block p-4">
                    <div class="text-center mb-4">
                        <h3 class="text-center" style="color: #2196F3; font-weight: 600;">@ViewData["Title"]</h3>
                        <p class="text-muted">Create a new account</p>
                    </div>
                    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                        <div class="form-group position-relative">
                            <label asp-for="Input.Email" class="form-label text-muted">Email</label>
                            <input asp-for="Input.Email" class="form-control pl-5" autocomplete="username"
                                aria-required="true" placeholder="name@example.com"
                                style="height: 45px; border-radius: 4px;" />
                            <i class="icofont icofont-email text-primary"
                                style="position: absolute; bottom: 14px; left: 15px;"></i>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-group position-relative">
                            <label asp-for="Input.Password" class="form-label text-muted">Password</label>
                            <input asp-for="Input.Password" class="form-control pl-5" autocomplete="new-password"
                                aria-required="true" placeholder="password" style="height: 45px; border-radius: 4px;" />
                            <i class="icofont icofont-lock text-primary"
                                style="position: absolute; bottom: 14px; left: 15px;"></i>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="form-group position-relative">
                            <label asp-for="Input.ConfirmPassword" class="form-label text-muted">Confirm
                                Password</label>
                            <input asp-for="Input.ConfirmPassword" class="form-control pl-5" autocomplete="new-password"
                                aria-required="true" placeholder="confirm password"
                                style="height: 45px; border-radius: 4px;" />
                            <i class="icofont icofont-lock text-primary"
                                style="position: absolute; bottom: 14px; left: 15px;"></i>
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>
                        <div class="row mt-4">
                            <div class="col-md-12">
                                <button id="registerSubmit" type="submit"
                                    class="btn btn-primary btn-md btn-block waves-effect waves-light text-center"
                                    style="height: 45px; border-radius: 25px; font-weight: 600;">
                                    <i class="icofont icofont-user-alt-3 mr-2"></i> CREATE ACCOUNT
                                </button>
                            </div>
                        </div>
                        <div class="row mt-4">
                            <div class="col-md-12">
                                <hr style="border-top: 1px solid #f1f1f1;">
                                <div class="text-center">
                                    <p class="text-muted m-t-10">Already have an account? <a asp-page="./Login"
                                            asp-route-returnUrl="@Model.ReturnUrl" class="text-primary"><b>Log
                                                in</b></a></p>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
