@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="container-fluid">
    <div class="row justify-content-center align-items-center" style="min-height: 80vh;">
        <div class="col-md-5">
            <div class="auth-box card"
                style="box-shadow: 0 10px 20px rgba(0,0,0,0.19), 0 6px 6px rgba(0,0,0,0.23); border-radius: 8px; border: none;">
                <div class="card-block p-4">
                    <div class="text-center mb-4">
                        <h3 class="text-center" style="color: #2196F3; font-weight: 600;">@ViewData["Title"]</h3>
                        <p class="text-muted">Enter your credentials to continue</p>
                    </div>
                    <form id="account" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                        <div class="form-group position-relative">
                            <label asp-for="Input.Email" class="form-label text-muted">Email</label>
                            <input asp-for="Input.Email" class="form-control pl-5" autocomplete="username"
                                aria-required="true" placeholder="name@example.com"
                                style="height: 45px; border-radius: 4px;" />
                            <i class="icofont icofont-email text-primary"
                                style="position: absolute; bottom: 14px; left: 15px;"></i>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-group position-relative">
                            <label asp-for="Input.Password" class="form-label text-muted">Password</label>
                            <input asp-for="Input.Password" class="form-control pl-5" autocomplete="current-password"
                                aria-required="true" placeholder="password" style="height: 45px; border-radius: 4px;" />
                            <i class="icofont icofont-lock text-primary"
                                style="position: absolute; bottom: 14px; left: 15px;"></i>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="row mt-4">
                            <div class="col-6">
                                <div class="form-check">
                                    <input asp-for="Input.RememberMe" class="form-check-input" type="checkbox"
                                        id="rememberMe" style="width: 18px; height: 18px; margin-top: 2px;" />
                                    <label class="form-check-label text-muted ml-2" for="rememberMe"
                                        style="font-size: 14px; cursor: pointer;">
                                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                                    </label>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="forgot-phone text-right">
                                    <a id="forgot-password" asp-page="./ForgotPassword"
                                        class="text-right text-primary">Forgot password?</a>
                                </div>
                            </div>
                        </div>
                        <div class="row mt-4">
                            <div class="col-md-12">
                                <button id="login-submit" type="submit"
                                    class="btn btn-primary btn-md btn-block waves-effect waves-light text-center"
                                    style="height: 45px; border-radius: 25px; font-weight: 600;">
                                    <i class="icofont icofont-lock mr-2"></i> SIGN IN
                                </button>
                            </div>
                        </div>
                        <div class="row mt-4">
                            <div class="col-md-12">
                                <hr style="border-top: 1px solid #f1f1f1;">
                                <div class="text-center">
                                    <p class="text-muted m-t-10">Don't have an account? <a asp-page="./Register"
                                            asp-route-returnUrl="@Model.ReturnUrl" class="text-primary"><b>Register
                                                here</b></a>
                                    </p>
                                    <p><a id="resend-confirmation" asp-page="./ResendEmailConfirmation"
                                            class="text-primary">Resend email confirmation</a></p>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Ensure the Remember Me checkbox is properly initialized and functional
        $(document).ready(function () {
            $("#rememberMe").change(function () {
                console.log("Remember me value: " + this.checked);
            });
        });
    </script>
}
